{
    "openapi": "3.0.0",
    "info": {
        "title": "Minimal API",
        "version": "1.0.0",
        "description": "A minimal API for testing Swagger docs"
    },
    "paths": {
        "/patients": {
            "get": {
                "summary": "Retrieve list of patients",
                "responses": {
                    "200": {
                        "description": "A list of patients",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "uuid": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}